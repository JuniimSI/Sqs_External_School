<p id="notice"><%= notice %></p>

<h1>Responsavels</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Aluno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responsavels.each do |responsavel| %>
      <tr>
        <td><%= responsavel.nome %></td>
        <td><%= responsavel.email %></td>
        <td><%= responsavel.telefone %></td>
        <td><%= responsavel.aluno_id %></td>
        <td><%= link_to 'Show', responsavel %></td>
        <td><%= link_to 'Edit', edit_responsavel_path(responsavel) %></td>
        <td><%= link_to 'Destroy', responsavel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

